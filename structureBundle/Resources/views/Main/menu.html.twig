<div id="banniere">
    <div class="row">
        <div class="small-12 columns">
            <figure class="border-radius-perso" id="logo">
                <a href="{{path('literie_accueil')}}"><img src="{{ asset('bundles/euroliteriestructure/images/logo.png')}}"/></a>
            </figure>
            <section>Le site d'Euro Literie à Mont de Marsan</section>
        </div>  
    </div>
</div>
<div class="row">
        <ul class="literie-menu" id="menu-left-literie">
            {%if menusClient is defined%}
                {%for menu in menusClient%}
                    {%if  menu.path == 'literie_marques'%}
                        <li><a href="{{path(menu.path)}}#Epeda">{{ menu.name }}</a>
                    {%else%}
                        <li><a href="{{path(menu.path)}}">{{ menu.name }}</a>
                    {%endif%}
                    {%if menu.sousMenu is defined%}
                        <ul>
                        {%for ss in menu.sousMenu%}
                        <li><a href="{{ path(menu.path)}}#{{ss.path}}" onClick="scroll({{ss.path}})">{{ ss.name}}</a></li>
                        {%endfor%}
                        </ul></li>
                    {%else%}
                        </li>
                    {%endif%}
                {%endfor%}
            {%endif%}
            {%if (connectClient is defined and connectClient)%}
                    <li><a href="{{path('logout')}}"><span class="right">Se Déconnecter</span></a></li>
            {%endif%}
        </ul>
        <ul class="social-menu">
            <li><figure><img src="{{ asset('bundles/euroliteriestructure/images/facebook.png')}}"/></figure></li>
            <li><figure><img src="{{ asset('bundles/euroliteriestructure/images/google-plus.png')}}"/></figure></li>
        </ul>
</div>

