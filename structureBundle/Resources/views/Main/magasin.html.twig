{% extends 'EuroLiteriestructureBundle:Main:layout.html.twig' %}
{%block body%}
    <div class="articles ">
            <article id="equipe" class="article">
                <article class="art-titre not-editable"><h1>L'Ã©quipe</h1></article>
                <article class="triangle-top"></article>
                <article class="triangle-bot"></article>
                <section class="art-content not-editable">
                {%for article in articles if article.tagName == 'equipe'%}
                <article class="personne" itemscope itemtype="http://www.data-vocabulary.org/Person">
                    <input type="hidden" name="id" value="{{article.id}}"/>
                    <article class="art-sstitre"><h2 itemprop="jobTitle">{{ article.artTitle}}</h2></article>
                    <figure class="imgEquipe">
                        <img itemprop="image" src="{{asset('bundles/euroliteriestructure/images/galerie/equipe/'~article.png.pngUrl)}}" />
                    </figure>
                    <article class="art-sscontent" itemprop="name">{{ article.artContent | raw}}</article>
                </article>
                {%endfor%}
                </section>
            </article>
            {%for article in articles if article.tagName == 'magasin'%}
                <article id="magasin" class="article">
                    <input type="hidden" name="id" value="{{article.id}}"/>
                    <article class="art-titre"><h1>{{article.artTitle}}</h1></article>
                    <article class="triangle-top"></article>
                    <article class="triangle-bot"></article>
                    <section class="art-content">{{article.artContent | raw}}
                    </section>
                    <article class="galerie-photo">
                    {%for image in images%}
                        <figure>
                            <img alt="Magasin Euro Literie" src="{{ asset('bundles/euroliteriestructure/images/galerie/magasin/active/'~image)}}" />
                        </figure>
                    {%endfor%}
                    </article>
                </article>
            {%endfor%}
    </div>
{%endblock%}
